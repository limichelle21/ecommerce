<%= form_for [:dashboard, @store, @product] do |f| %>

	<% if product.errors.any? %>
		<div class="alert alert-danger">
			<h4><%= pluralize(product.errors.count, "error") %>.</h4>
			<ul>
				<% product.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

		<%= form_group_tag(product.errors[:title]) do %>
			<%= f.label :title %>
			<%= f.text_field :title, class: 'form-control', placeholder: "Product Name" %>
		<% end %>

		<%= form_group_tag(product.errors[:description]) do %>
			<%= f.label :description %>
			<%= f.text_area :description, rows: 6, class: 'form-control', placeholder: "Description" %>
		<% end %>

		<%= form_group_tag(product.errors[:sku]) do %>
			<%= f.label :SKU %>
			<%= f.number_field :sku, class: 'form-control', placeholder: "SKU" %>
		<% end %>

		<%= form_group_tag(product.errors[:price_in_cents]) do %>
			<%= f.label :price %>
			<%= f.number_field :price_in_cents, min: 0, class: 'form-control', placeholder: "Price" %>
		<% end %>

		<%= form_group_tag(product.errors[:count]) do %>
			<%= f.label :count %>
			<%= f.number_field :count, class: 'form-control', placeholder: "Inventory Count" %>
		<% end %>

		<%= form_group_tag(product.errors[:count]) do %>
			<%= f.file_field :picture %>
		<% end %>


		<div class="form-group">
			<%= f.submit "Save", class: 'btn btn-success' %>
		</div>


<% end %>
