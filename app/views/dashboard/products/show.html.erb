<div class="container">
	<div class="row">
		<div class="col-md-4 col-md-offset-1">
			<img class="img-responsive" src="http://placehold.it/400x250/000/fff" alt="" />
		</div>
		<div class="col-md-5 col-md-offset-2">
			<div id="product-title">
				<h1><%= @product.title %></h1> 
			</div>
			<div id="product-price">	
				<h4>Price: $<%= @product.price %></h4>
			</div>
			<div id="product-description">
				<h4 class="lead"><%= @product.description %></h4>
			</div>		
			<h4><%= button_to 'Edit Product', edit_dashboard_store_product_path(product_id: @product), class: 'btn btn-success', remote: true %></h4>
        	<br />
       		<h4><%= button_to 'Delete Product', dashboard_store_product_path(product_id: @product), class: 'btn btn-danger', remote: true %></h4>
		</div>
	</div>
</div>
