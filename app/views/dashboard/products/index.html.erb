<div class="container">
       <h2>All Products - Total: <%= @products.count %> products </h2>
</div>

<div class="container-fluid">
        <table>
            <thead>
                <tr>
                    <th class="list-title">Item Name</th>
                    <th class="list-title">Description</th>
                    <th class="list-title">Image URL</th>
                    <th class="list-title">Price</th>
                    <th class="list-title">SKU</th>
                    <th class="list-title">Product Details</th>
                    <th class="list-title">Edit Product</th>
                    <th class="list-title">Delete Product</th>
                </tr>
            </thead>

            <tbody>
                <% @products.each do |product| %>
                <tr>
                    <td class="list-item"><%= product.title %></td>
                    <td class="list-item"><%= product.description %></td>
                    <td class="list-item">DISPLAY IMG</td>
                    <td class="list-item"><%= product.price %></td>
                    <td class="list-item"><%= product.sku %></td>
                    <td class="list-item"><%= link_to 'Show', dashboard_store_product_path(@store.id, product.id) %></td>
                    <td class="list-item"><%= link_to 'Edit', edit_dashboard_store_product_path(@store.id, product.id) %></td>
                    <td class="list-item"><%= link_to 'Delete', dashboard_store_product_path(@store.id, product.id), method: :delete, data: { confirm: 'Are you sure?' }, remote: true %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>

<div class="container">
    <%= link_to "Add New Product", new_dashboard_store_product_path(@store.id, @product), class: "btn btn-success"%>
</div>

    
</div>


