<div class="container">
	<h1>Create Your Store</h1>
	<div class="row">
		<div class="col-md-3">
			<h4>Store Name</h4>
		</div>
		<div class="col-md-9">
			<%= form_for [:dashboard, @store] do |f| %>
				<% if store.errors.any? %>
					<div class="alert alert-danger">
						<h4><%= pluralize(store.errors.count, "error") %>.</h4>
						<ul>
							<% store.errors.full_messages.each do |msg| %>
							<li><%= msg %></li>
							<% end %>
						</ul>
					</div>
				<% end %>	

				<%= form_group_tag(store.errors[:name]) do %>
					<%= f.label :name %>
					<%= f.text_field :name, class: 'form-control', placeholder: "Store Name" %>
				<% end %>

				<div class="form-group">
					<%= f.submit "Save", class: 'btn btn-success' %>
				</div>

			<% end %>
		</div>
	</div>
</div>