<div class="container">
	<h1>Update Your Store</h1>
	<div class="row">
		
		<div class="container">
			<%= form_for(@store, url: dashboard_store_path, method: :patch) do |f| %>

				<% if @store.errors.any? %>
					<div class="alert alert-danger">
						<h4><%= pluralize(@store.errors.count, "error") %>.</h4>
						<ul>
							<% @store.errors.full_messages.each do |msg| %>
							<li><%= msg %></li>
							<% end %>
						</ul>
					</div>
				<% end %>	

				<%= form_group_tag(@store.errors[:name]) do %>
					<%= f.label :store_name %>
					<%= f.text_field :name, class: 'form-control', placeholder: "Store Name" %>
				<% end %>
            
                <%= form_group_tag(@store.errors[:description]) do %>
					<%= f.label :store_description %>
					<%= f.text_field :about, class: 'form-control', placeholder: "Brief description about your store" %>
				<% end %>
            
                <%= form_group_tag(@store.errors[:about]) do %>
					<%= f.label :store_about %>
					<%= f.text_field :description, class: 'form-control', placeholder: "What is your story?" %>
				<% end %>
            
                <%= form_group_tag(@store.errors[:action_call]) do %>
					<%= f.label :store_action_call %>
					<%= f.text_field :action_call, class: 'form-control', placeholder: "Place your call to action here" %>
				<% end %>

				<%= form_group_tag(@store.errors[:owner_id]) do %>
					<%= f.hidden_field :owner_id, :value => current_user.id %>
				<% end %>	

				<div class="form-group">
					<%= f.submit "Save", class: 'btn btn-success' %>
				</div>

			
            <% end %>
            
            
		</div>
	</div>
</div>