			<div class="thumbnail">
				<img src="https://placebear.com/400/250" alt="">
				<div class="caption">
					<h3><%= product.title %></h3>
					<%= link_to "Details", store_product_path(@store.id, product.id), class: 'btn btn-primary' %>
				</div>
			</div>
		</div>
		<% end %>
