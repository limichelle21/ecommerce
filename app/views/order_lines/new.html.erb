<div class="well"> 
	<div class="row">
		<div class="col-md-4">
			<h4><%= product.title %></h4>
		</div>
		<div class="col-md-8">
			<%= form_for order_line, remote: true do |f| %>
			<h4 class="text-right">Unit Price: <%= order_line.unit_price %></h4>
			<div class="row">
				<div class="col-xs-4">
					<%= f.number_field :quantity, value: order_line.quantity, class: "form-control", min: 1 %>
					<%= f.text_field :product_id, value: product.id %>
				</div>
				
			</div>
			<h4 class="text-right">Total Price: <%= order_line.total_price %></h4>
		</div>
	</div>
</div>