
<% @order.order_lines.each do |order_line| %>

	<div class="well"> 
		<div class="row">
			<div class="col-md-4">
				<h4><strong><%= link_to order_line.product.title, store_product_path %></strong></h4>
				<br>
				<br>
				<h4>Unit Price: $<%= order_line.product.price_in_cents %></h4>
			</div>
			
			<div class="col-md-8">				
				
				<%= form_for :order_line do |f| %>
				<div class="row">
					<div class="col-xs-4">
						<%= f.number_field :quantity, value: order_line.quantity, class: "form-control", min: 1, maxlength: 2 %>
						<%= f.hidden_field :product_id, value: order_line.product.id %>
						<h4><b>Item Subtotal: $<%= order_line.total_price %></b></h4>
					</div>
					
				</div>
				<% end %>		

			</div>
		</div>
	</div>

<% end %>