<div class="well"> 
	<div class="row">
		<div class="col-md-4">
			<h4><%= order_line.product.title %></h4>
		</div>
		<div class="col-md-8">
			<%= form_for order_line, remote: true do |f| %>
			<h4 class="text-right">Unit Price: <%= order_line.unit_price %></h4>
			<div class="row">
				<div class="col-xs-4">
					<%= f.number_field :quantity, value: order_line.quantity, class: "form-control", min: 1 %>
					<%= f.hidden_field :product_id, value: order_line.product.id %>
				</div>
				<div class="col-xs-8 text-right">
					<div class="btn-group">
						<%= f.submit "Update Quantity", class: "btn btn-primary" %>
						<%= link_to "Delete", order_line, { data: { confirm: "Are you sure you wish to remove '#{product.title}' from your cart?" }, method: :delete, remote: true, class: "btn btn-danger" } %>
					</div>
				</div>
			</div>
			<h4 class="text-right">Total Price: <%= order_line.total_price %></h4>
			<% end %>
		</div>
	</div>
</div>
