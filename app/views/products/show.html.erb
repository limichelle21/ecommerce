<div class="container">
	<div class="row">
		<div class="col-md-4 col-md-offset-1">
			<img class="img-responsive" src="http://placehold.it/400x250/000/fff" alt="" />
		</div>
		<div class="col-md-5 col-md-offset-2">
			<div id="product-title">
				<h1><%= @product.title %></h1> 
			</div>
			<div id="product-price">	
				<h4>Price: $<%= @product.price %></h4>
			</div>
			<div id="product-description">
				<h4 class="lead"><%= @product.description %></h4>
			</div>		


			 <%= form_tag  do %>
                <%= hidden_field_tag "order_line[product_id]", @product.id %>
                <%= hidden_field_tag "order_line[order_id]", current_order ? current_order.id : nil %>
                <%= number_field_tag "order_line[quantity]", value: order_line.quantity, class: "form-control", min: 1, maxlength: 2 %>
                <%= hidden_field_tag "order_line[price_in_cents]", @product.price_in_cents %>
                <%= submit_tag "Add to Cart" %>
            

            <% end %> 
		</div>
	</div>
</div>
