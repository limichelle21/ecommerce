<div class="container">
	<div class="row">
		<div class="col-md-4 col-md-offset-1">
			<img class="img-responsive" src="http://placehold.it/400x250/000/fff" alt="" />
		</div>
		<div class="col-md-5 col-md-offset-2">
			<div id="product-title">
				<h1><%= @product.title %></h1> 
			</div>
			<div id="product-price">	
				<h4>Price: $<%= @product.price %></h4>
			</div>
			<div id="product-description">
				<h4 class="lead"><%= @product.description %></h4>
			</div>		

		        <%= form_tag store_order_lines_path do %>
	                
	                <div class="input-group"> 
		                <%= select_tag "order_line[quantity]", options_for_select([["1","1"], ["2","2"], ["3","3"], ["4","4"]]) %>
		                <div class="input-group-btn">
		                	<%= hidden_field_tag "order_line[order_id]", current_order ? current_order.id : Order.new.id %>
		                	<%= hidden_field_tag "order_line[product_id]", @product.id %>
			                <%= hidden_field_tag "order_line[price_in_cents]", @product.price_in_cents %>
			                <%= submit_tag "Add to Cart", class: "btn btn-primary" %>
			            </div>
	            	</div>
            	<% end %>


		</div>
	</div>
</div>
