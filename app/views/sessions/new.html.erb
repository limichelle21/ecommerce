<div class="container">
  <div class="row">
    <div class="col-md-8">

      <h2>Log in</h2>

      <%= form_for(:session, url: store_sign_in_path(store_id: current_store.id)) do |f| %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>

        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
      <% end %>

    </div>
  </div>
</div>

