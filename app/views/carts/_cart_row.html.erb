<div class="well"> 
	<div class="row">
		<div class="col-md-4">

			<h4><strong><%= link_to product.title, store_product_path(current_store.id, product.id) %></strong></h4>
			
		</div>
		
		<div class="col-md-8">				
			
				<%= form_for :order_line, url: store_order_line_path(current_store.id, order_line.id), method: :patch, remote: true do |f| %>

					<h4 class="text-right">Unit Price: $<%= order_line.product.price_in_cents %></h4>
					<div class="row">
						<div class="col-xs-4">
							<%= f.number_field :quantity, value: order_line.quantity, class: "form-control", min: 1 %>
							<%= f.hidden_field :product_id, value: product.id %>
						</div>
						<div class="col-xs-8 text-right">
							<div class="btn-group">
								<%= f.submit "Update Quantity", class: "btn btn-success" %>		
								<%= link_to "Delete", store_order_line_path(current_store.id, order_line.id), method: :delete, data: {confirm: "Are you sure you want to delete the product '#{order_line.product.title}'from your cart?"}, class: "btn btn-danger", remote: true %>  	
							</div>
						</div>
					</div>

					<h4 class="subtotal">Subtotal: $<%= order_line.total_price %></h4>
				<% end %>
				
			           
	        	

		</div>
	</div>
</div>